<img src="/images/script.png" alt="script-title" style="max-width: 80%;">

<div class="grid-container">

    <div class="grid-x grid-margin-x small-up-1 medium-up-3">
        {{#if loggedIn}}
        <div class="cell">
            <a href="/profile">
                <div class="card homepage-card">
                    <img src="images/espresso-tini.jpg">
                    <div class="card-section">
                        <h4 style="font-family:'Courier New', Courier, monospace; font-weight:bold">Your Profile</h4>
                        <p style="font-size: 14px;">A place for you to build your own collection.</p>
                    </div>
                </div>
            </a>
        </div>
        {{else}}
        <div class="cell">
            <a href="/login">
                <div class="card homepage-card">
                    <img src="images/espresso-tini.jpg">
                    <div class="card-section">
                        <h4 style="font-family:'Courier New', Courier, monospace; font-weight:bold">Your Profile</h4>
                        <p style="font-size: 14px;">A place for you to build your own collection.</p>
                    </div>
                </div>
            </a>
        </div>
        {{/if}}

        <div class="cell">

            <div class="card homepage-card">
                <img src="/images/cocktail-new.jpg" alt="cocktail">
                <div class="card-section">

                    <h4 style="font-family:'Courier New', Courier, monospace; font-weight:bold">Explore by Liquor Type
                    </h4>
                   

                    <form class="ingredientSearch" method="GET" action="/byingredient">
                        <input name="search" placeholder="Enter a Liquor"
                            style="text-align: center; border-radius: 50px">
                    </form>

                </div>

            </div>
        </div>

        <div class="cell">
            <a href="/classics">
                <div class="card homepage-card">

                    <img src="/images/old-fashioned.jpg">

                    <div class="card-section">
                        <h4 style="font-family:'Courier New', Courier, monospace; font-weight:bold">Modern Classics</h4>
                        <p style="font-size: 14px;">Cocktails that have inspired exciting new ideas</p>
                    </div>
                </div>
            </a>
        </div>

    </div>
</div>